						<p class="text">{% trans %}acseine.adult_acne.question3.paragraph4{% endtrans %}</p>
					</div>
					<div class="thumbnail">
						{%  if (app.request.getLocale()) == 'en' %}
							<img src="{{asset('acseine/original/images/skin_problems/adult_acne//thumb_04.png')}}" alt="Vegetables & fruit">
						{% elseif (app.request.getLocale()) == 'th'%}
							<img src="{{asset('acseine/original/images/skin_problems/adult_acne//thumb_04_th.png')}}" alt="Vegetables & fruit">
						{% endif %}
					</div>
				</div>
				<div class="listItems skin_pimple_reply">
					<div class="content">
						<h5>{% trans %}acseine.adult_acne.question3.head_paragraph5{% endtrans %}</h5>
						<p class="text">{% trans %}acseine.adult_acne.question3.paragraph5{% endtrans %}</p>
					</div>
					<div class="thumbnail">
						{%  if (app.request.getLocale()) == 'en' %}
