							<img src="{{asset('acseine/original/images/skin_problems/adult_acne//thumb_02_th.png')}}" alt="Sleep">
						{% endif %}
					</div>
				</div>
				<div class="listItems skin_pimple_reply">
					<div class="content">
						<h5>{% trans %}acseine.adult_acne.question3.head_paragraph3{% endtrans %}</h5>
						<p class="text">{% trans %}acseine.adult_acne.question3.paragraph3{% endtrans %}</p>
					</div>
					<div class="thumbnail">
						{%  if (app.request.getLocale()) == 'en' %}
							<img src="{{asset('acseine/original/images/skin_problems/adult_acne//thumb_03.png')}}" alt="UV care">
						{% elseif (app.request.getLocale()) == 'th'%}
