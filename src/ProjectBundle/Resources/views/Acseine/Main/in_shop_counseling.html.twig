{% extends "ProjectBundle:"~ view_layout ~":layout.html.twig" %}

{% block title %}{% trans %}acseine.in_shop_counseling.title{% endtrans %} | {% trans %}project.title_bar_name{% endtrans %} {{ parent() }}{% endblock %}
{% block home_active %}active{% endblock %}
{% block m_home_active %}active{% endblock %}

{% block html_description %}{% trans %}acseine.in_shop_counseling.title{% endtrans %} {% trans %}acseine.in_shop_counseling.head{% endtrans %}{% endblock %}
{% block html_keywords %}{% trans %}acseine.in_shop_counseling.html_keywords{% endtrans %}{% endblock %}

{% block main_class %}{% endblock %}

{% block breadcrumb %}
<div class="breadcrumb">
	<div class="container breadcrumb_in">
		<div class="breadcrumb_items">
			<a href="{{path('homepage')}}" class="active">{% trans %}acseine.breadcrumb.top{% endtrans %} </a>
		</div>
		<div class="breadcrumb_items">
			<a href="{{path('counseling')}}" class="active">{% trans %}acseine.breadcrumb.counseling{% endtrans %} </a>
		</div>
		<div class="breadcrumb_items">
			{% trans %}acseine.breadcrumb.in_shop_counseling{% endtrans %}
		</div>
	</div>
</div>
<!-- /breadcrumb -->
<div class="container title_category">
	<h1>{% trans %}acseine.in_shop_counseling.title{% endtrans %}</h1>
</div>
{% endblock %}

{% block content %}
<section id="in-shop-counseling" class="in-shop-counseling">
			<!-- /title_table -->
<div class="main-content container">
	<div class="listItems mv_top">
		<div class="description">
			<h3 class="mv_top_h3">{% trans %}acseine.in_shop_counseling.head{% endtrans %}</h3>
			<p class="mv_top_txt">{% trans %}acseine.in_shop_counseling.paragraph1{% endtrans %}</p>
		</div>
		<div class="avatar">
			<img src="{{asset('acseine/original/images/counseling/in_shop/mv_img_01.jpg')}}" alt="">
		</div>
	</div>
<!-- /mv_top -->
<div class="shop_nav">
	{%  if (app.request.getLocale()) == 'en' %}
		<div class="listItems">
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_01"><img src="{{asset('acseine/original/images/counseling/in_shop/step_01.png')}}" alt="Step 01 First, we'll ask about your skin's condition."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_02"><img src="{{asset('acseine/original/images/counseling/in_shop/step_02.png')}}" alt="Step 02 We'll offer skin care advice tailored to your skin condition."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_03"><img src="{{asset('acseine/original/images/counseling/in_shop/step_03.png')}}" alt="Step 03 We'll also offer makeup advice."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_04"><img src="{{asset('acseine/original/images/counseling/in_shop/step_04.png')}}" alt="Step 04 We'll give you samples to try!"></a><br></div>
		</div>
	{% elseif (app.request.getLocale()) == 'th'%}
		<div class="listItems">
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_01"><img src="{{asset('acseine/original/images/counseling/in_shop/step_01_th.png')}}" alt="Step 01 First, we'll ask about your skin's condition."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_02"><img src="{{asset('acseine/original/images/counseling/in_shop/step_02_th.png')}}" alt="Step 02 We'll offer skin care advice tailored to your skin condition."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_03"><img src="{{asset('acseine/original/images/counseling/in_shop/step_03_th.png')}}" alt="Step 03 We'll also offer makeup advice."></a><br></div>
			<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center"><a href="#step_04"><img src="{{asset('acseine/original/images/counseling/in_shop/step_04_th.png')}}" alt="Step 04 We'll give you samples to try!"></a><br></div>
		</div>
	{% endif %}
</div>
<div class="shop_listStep">
	<div class="listItems shop_listStep_items" id="step_01">
		<div class="avatar">
			<img src="{{asset('acseine/original/images/counseling/in_shop/img_step_01.jpg')}}" alt="">
		</div>
		<div class="description">
			<h3 class="title_step">
				{%  if (app.request.getLocale()) == 'en' %}
					<img src="{{asset('acseine/original/images/counseling/in_shop/title_step_01.png')}}" alt="Step 01 First, we'll ask about your skin's condition">
				{% elseif (app.request.getLocale()) == 'th'%}
					<img src="{{asset('acseine/original/images/counseling/in_shop/title_step_01_th.png')}}" alt="Step 01 First, we'll ask about your skin's condition">
