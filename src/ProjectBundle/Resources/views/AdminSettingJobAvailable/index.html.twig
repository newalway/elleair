{% extends 'ProjectBundle::admin.html.twig'%}

{% block javascripts %}
  {{ parent() }}
{% endblock %}

{% use "ProjectBundle:AdminSettingJobAvailable:blocks.html.twig" %}
{% use "ProjectBundle::flash_message.html.twig" %}
{% block content %}

<form action="{{path('admin_update_setting_job_available')}}" method="post" role="form" enctype="multipart/form-data" class="form-horizontal">
	      {{form_widget(form._token)}}
  <div class="row">
  	<div class="col-md-12">
  		<div class="box box-default">
  			<div class="box-header">
  				<h3 class="box-title"></h3>
  			</div><!-- /.box-header -->

  				<div class="box-body">
            <div class="form-group">
              <label class="control-label col-md-3" for="status">Job Available File </label>
              <div class="col-md-7 form-control-static">
                  {{ form_widget(form.optionValue) }}
                  <div class="error-form">{{form_errors(form.optionValue)}}</div>
                  <div class=""><br />
                    {% if form.vars.value.optionValue %}

                        <a href="{{path('admin_update_setting_dowload_filejob_available')}}">
                            <button type="button" class="btn btn-default" style="cursor:pointer">
                                <img src="{{asset('images/icon_pdf.png')}}" alt="{{form.vars.value.optionValue}}" width="80px">
                                      {{form.vars.value.optionValue}}

                            </button>
                        </a>
                        <br />
                    {% endif %}
                  </div>
              </div>
            </div>

  				</div>

  		</div><!-- /.box -->
  	</div>
  </div>

  <div class="">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <button id="save" name="save" type="submit" class="btn btn-primary">{{btn_label_save}}</button>
        <a href="{{path('admin_setting_job_available')}}" class="btn btn-default">{{btn_label_close}} </a>
      </div>
    </div>
  </div>

</form>


{% endblock %}
